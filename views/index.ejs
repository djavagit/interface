<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voyage</title>
    <script src="index.js"></script>
</head>

<body>
    <div>
        Choisir un véhicule :
        <select name="vehicules" onchange="updateContent(this, '<%= JSON.stringify(vehicules) %>')">
            <option selected="selected" value="default">Séléctionner un véhicule</option>
            <% vehicules.forEach(function(v){ %>
                <option value="<%= v.name %>">
                    <%= v.name %>
                </option>
                <% }); %>
        </select>
        <div id="vehicules-content" class="vehicules-content">
            Autonomie : <br>Temps de chargement :
        </div>
    </div>
</body>
<script>
    let vec_content = document.getElementById('vehicules-content');

    function updateContent(select, vehicules) {
        let name = select.value;
        vehicules = JSON.parse(vehicules)
        vehicule = vehicules.find(v => v.name === name)
        console.log(vehicule);
        vec_content.innerHTML = "Autonomie : " + vehicule.autonomy + "<br>Temps de chargement : " + vehicule.chargingTime;
    }
</script>

</html>